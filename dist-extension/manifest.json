{
  "manifest_version": 3,
  "name": "小程序容器",
  "version": "1.0",
  "description": "用于运行和展示小程序的浏览器插件",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "小程序容器"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/styles.css"]
    }
  ]
}