<view class="container">
  <h1>MiniApp Counter</h1>
  <view class="counter">
    <strong>Count: </strong><text>{{page.data.count}}</text>
  </view>
<button onclick="update">点击更新计数</button>
  <view class="even" a:if="{{page.data.count % 2 === 0}}">
    <p>当前为偶数</p>
  </view>

  <ul>
    <li class="item" a:for="{{page.data.count}}" a:for-item="item" a:for-index="idx">项 {{idx}}: {{item}}</li>
  </ul>
</view>


